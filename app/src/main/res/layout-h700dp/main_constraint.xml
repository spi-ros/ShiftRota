    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:id="@+id/collapsing_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hidden_layout_shape"
                app:behavior_peekHeight="60dp"
                app:behavior_hideable="true"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <TextView
                    android:id="@+id/date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="6dp"/>

                <TextView
                    android:id="@+id/selected_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="6dp"
                    android:textSize="16sp"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/status_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/selected_text_view"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    app:np_dividerColor="@color/colorPrimary"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="64dp"
                    app:np_orientation="horizontal"
                    app:np_selectedTextColor="@color/colorPrimary"
                    app:np_selectedTextSize="15dp"
                    app:np_textColor="@color/colorPrimary"
                    app:np_textSize="8dp"
                    app:np_typeface="@string/roboto_light"
                    app:np_width="180dp" />

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/hours_number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/status_picker"
                    android:layout_below="@id/selected_text_view"
                    app:np_dividerColor="@color/colorPrimary"
                    app:np_formatter="@string/number_picker_formatter"
                    app:np_height="64dp"
                    app:np_orientation="horizontal"
                    app:np_selectedTextColor="@color/colorPrimary"
                    app:np_selectedTextSize="15dp"
                    app:np_textColor="@color/colorPrimary"
                    app:np_textSize="8dp"
                    app:np_typeface="@string/roboto_light"
                    app:np_width="180dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/status_picker"
                    android:layout_margin="6dp"
                    android:hint="@string/notes"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/notes_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_input_layout"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="@string/save"
                    android:textSize="12sp" />
            </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="342dp" />

</androidx.constraintlayout.widget.ConstraintLayout>