<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/dark_theme_color">

    <TextView
        android:id="@+id/month_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/abeezee_italic"
        android:gravity="center"
        android:text="November"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/border_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/border_text_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/cancel_end_color"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/month_text_view" />

    <TextView
        android:id="@+id/thursday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/thursday"
        android:textColor="@color/color_days"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/friday_text_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/wednesday_text_view"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <TextView
        android:id="@+id/friday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/friday"
        android:textColor="@color/color_days"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/satuday_text_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/thursday_text_view"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <TextView
        android:id="@+id/satuday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/saturday"
        android:textColor="@color/color_days"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/sunday_text_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/friday_text_view"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <TextView
        android:id="@+id/monday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/monday"
        android:textColor="@color/color_days"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tuesday_text_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <TextView
        android:id="@+id/tuesday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/tuesday"
        android:textColor="@color/color_days"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/wednesday_text_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/monday_text_view"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <TextView
        android:id="@+id/sunday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/sunday"
        android:textColor="@color/color_days"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/satuday_text_view"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <TextView
        android:id="@+id/wednesday_text_view"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fontFamily="@font/arima_madurai"
        android:gravity="center"
        android:text="@string/Wednesday"
        android:textColor="@color/color_days"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/thursday_text_view"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tuesday_text_view"
        app:layout_constraintTop_toBottomOf="@+id/border_text_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_view_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thursday_text_view" />

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hours_worked_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_worked_hours"
        android:textColor="@color/info_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/hours_worked_number_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view" />

    <TextView
        android:id="@+id/hours_worked_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/info_color"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/hours_worked_text_view"
        app:layout_constraintTop_toTopOf="@+id/hours_worked_text_view"
        tools:text="31" />

    <TextView
        android:id="@+id/hours_booked_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/booked_hours_left"
        android:textColor="@color/info_color"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/hours_booked_number_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_worked_text_view" />

    <TextView
        android:id="@+id/hours_booked_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/info_color"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/hours_booked_text_view"
        app:layout_constraintTop_toBottomOf="@+id/hours_worked_number_text_view"
        tools:text="31" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="183dp" />

